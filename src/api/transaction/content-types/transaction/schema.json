{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "receiverBalanceBefore": {
      "type": "decimal",
      "required": true
    },
    "receiverBalanceAfter": {
      "type": "decimal",
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "fee": {
      "type": "decimal",
      "required": false,
      "default": 2
    },
    "totalAmount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "transactionStatus": {
      "type": "string"
    },
    "referenceNo": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "senderBalanceAfter": {
      "type": "decimal",
      "required": true
    },
    "senderBalanceBefore": {
      "type": "decimal",
      "required": true
    },
    "sender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "transactions"
    },
    "receiver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "receivedTransactions"
    },
    "cardSender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::card.card",
      "inversedBy": "senderTransaction"
    },
    "cardReceiver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::card.card",
      "inversedBy": "receiverTransaction"
    }
  }
}
