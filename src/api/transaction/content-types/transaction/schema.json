{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "sender_user_id": {
      "type": "string",
      "required": false
    },
    "sender_card_id": {
      "type": "string",
      "required": false
    },
    "receiver_user_id": {
      "type": "string",
      "required": false
    },
    "receiver_card_id": {
      "type": "string",
      "required": false
    },
    "receiver_balance_before": {
      "type": "decimal",
      "required": true
    },
    "receiver_balance_after": {
      "type": "decimal",
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "fee_amount": {
      "type": "decimal",
      "required": false,
      "default": 2
    },
    "total_amount": {
      "type": "decimal",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "transaction_status": {
      "type": "string"
    },
    "reference_no": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "sender_balance_after": {
      "type": "decimal",
      "required": true
    },
    "sender_balance_before": {
      "type": "decimal",
      "required": true
    },
    "sender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "transactions"
    },
    "receiver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "received_transactions"
    }
  }
}
