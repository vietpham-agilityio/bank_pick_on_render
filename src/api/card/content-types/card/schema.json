{
  "kind": "collectionType",
  "collectionName": "cards",
  "info": {
    "singularName": "card",
    "pluralName": "cards",
    "displayName": "Card"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "card_number": {
      "type": "integer",
      "required": true
    },
    "card_holder_name": {
      "type": "string",
      "required": true
    },
    "expiry_date": {
      "type": "date",
      "required": true
    },
    "cvv": {
      "type": "integer",
      "required": true
    },
    "card_type": {
      "type": "string"
    },
    "card_brand": {
      "type": "string"
    },
    "balance": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "last_four_digits": {
      "type": "integer"
    },
    "bank_name": {
      "type": "string"
    }
  }
}
