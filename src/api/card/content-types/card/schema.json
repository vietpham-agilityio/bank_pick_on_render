{
  "kind": "collectionType",
  "collectionName": "cards",
  "info": {
    "singularName": "card",
    "pluralName": "cards",
    "displayName": "Card"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "card_holder_name": {
      "type": "string",
      "required": true
    },
    "expiry_date": {
      "type": "date",
      "required": true
    },
    "card_type": {
      "type": "string"
    },
    "card_brand": {
      "type": "string"
    },
    "balance": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "bank_name": {
      "type": "string"
    },
    "card_number": {
      "type": "string",
      "maxLength": 16,
      "required": true
    },
    "cvv": {
      "type": "string",
      "maxLength": 4,
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "cards"
    }
  }
}
