{
  "kind": "collectionType",
  "collectionName": "cards",
  "info": {
    "singularName": "card",
    "pluralName": "cards",
    "displayName": "Card"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "cardHolderName": {
      "type": "string",
      "required": false
    },
    "expiryDate": {
      "type": "date",
      "required": false
    },
    "cardType": {
      "type": "string"
    },
    "cardBrand": {
      "type": "string"
    },
    "balance": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "USD"
    },
    "bankName": {
      "type": "string"
    },
    "cardNumber": {
      "type": "string",
      "maxLength": 16,
      "required": false
    },
    "cvv": {
      "type": "string",
      "maxLength": 4,
      "required": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "cards"
    },
    "senderTransaction": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "cardSender"
    },
    "receiverTransaction": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "cardReceiver"
    },
    "beneficiaries": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::beneficiary.beneficiary",
      "mappedBy": "card"
    }
  }
}
